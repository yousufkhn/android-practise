<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/lpuOrange"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/departmentDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lovely Professional University"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/rimouski"
        android:layout_marginTop="36dp"
        android:padding="16dp"
        android:textSize="20sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_cart_page"
        android:layout_weight="1"
        android:paddingTop="40sp"
        android:paddingHorizontal="8dp"
        android:orientation="vertical"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/departmentLottie"
            app:lottie_rawRes="@raw/cs_lottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Department: "
            android:fontFamily="@font/rimouski"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"/>

        <TextView
            android:id="@+id/departmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rimouski"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A glimpse of our department"
            android:fontFamily="@font/rimouski"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:id="@+id/departmentImgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

        </HorizontalScrollView>


        

    </LinearLayout>

</LinearLayout>