<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item android:id="@android:id/background">
        <shape android:shape="ring" android:thicknessRatio="1" android:useLevel="false">
            <solid android:color="#e0e0e0" />  <!-- Background color of the circle -->
        </shape>
    </item>

    <!-- Progress circle -->
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="270">
            <shape android:shape="ring" android:thicknessRatio="1" android:useLevel="true">
                <solid android:color="#FF0000" />  <!-- Color of the progress circle -->
            </shape>
        </rotate>
    </item>
</layer-list>